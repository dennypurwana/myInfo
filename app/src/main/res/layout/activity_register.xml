<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <RelativeLayout
        android:id="@+id/containerLayout"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView

            android:id="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_my_info"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelTitle"
            android:text="Masukkan No NPM anda"
            android:textColor="@color/orangeMuda"/>


        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/lblNpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NPM"
            android:inputType="number"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/labelTitle"
            android:textColor="@color/white"
            android:textSize="12dp"/>

        <EditText
            android:id="@+id/editTextNpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/lblNpm"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:textColor="@color/colorAccent"
            />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/editTextNpm"
            android:id="@+id/lineNpm"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"></LinearLayout>




        <Button
            android:id="@+id/btnCheckNPM"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_primary_round_corner"
            android:text="DAFTAR"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/lineNpm"
            />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/btnCheckNPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelLink1"
                android:text="Tidak bisa mengakses no NPM anda?"
                android:textColor="@color/orangeMuda"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/labelLink1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelLink2"
                android:textStyle="bold"
                android:text="HUBUNGI KAMI"
                android:textColor="@color/orangeAccent"/>





    </RelativeLayout>

</ScrollView>