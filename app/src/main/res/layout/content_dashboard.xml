<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.dashbord.DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard">


    <RelativeLayout
        android:id="@+id/containerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="288dp">

        <RelativeLayout
            android:id="@+id/contentDataUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang,"
                android:textColor="@color/textTitle1"
                android:textSize="12dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title1"
                android:text=""
                android:textColor="@color/textTitle2"
                android:textSize="22dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/npmUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:text=""
                android:textColor="@color/textTitle1"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/prodi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/npmUser"
                android:text=""
                android:textColor="@color/textTitle1"
                android:textSize="15dp" />

        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/contentMenu"
        android:layout_below="@+id/contentDataUser"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/menuKHS"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageKHS"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/khs"/>

            <TextView
                android:layout_below="@+id/imageKHS"
                android:text="Lihat KHS"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menuJadwal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageJadwal"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/kalender"/>
            <TextView
                android:layout_below="@+id/imageJadwal"
                android:text="Jadwal Hari Ini"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/menuKHS"
            android:layout_marginTop="50dp"
            android:id="@+id/menuJadwalKuliah"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="40dp"
                android:id="@+id/imageJadwalKuliah"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/jadwal_kuliah"/>

            <TextView
                android:layout_below="@+id/imageJadwalKuliah"
                android:text="Jadwal Perkuliahan"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>




        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_below="@+id/menuJadwal"
            android:id="@+id/menuProfile"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/user_biru"/>
            <TextView
                android:layout_below="@+id/imageProfile"
                android:text="Profil"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>